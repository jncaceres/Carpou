<%= react_component("devise/passwords/new", {password_path: password_path(resource)}) %>
<% if resource.errors.any? %>
  </div>
      <% resource.errors.full_messages.each do |message| %>
        <%= react_component("devise/passwords/new_error", {message_error: message}) %>
      <% end %>
  </div>
<% end %>

