<p id="notice"><%= notice %></p>

<h1>Passenger Requests</h1>

<table>
  <thead>
    <tr>
      <th>Comments</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @passenger_requests.each do |passenger_request| %>
      <tr>
        <td><%= passenger_request.comments %></td>
        <td><%= passenger_request.status %></td>
        <td><%= link_to 'Show', passenger_request %></td>
        <td><%= link_to 'Edit', edit_passenger_request_path(passenger_request) %></td>
        <td><%= link_to 'Destroy', passenger_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

